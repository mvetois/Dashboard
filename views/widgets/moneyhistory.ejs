<div class="card" style="width: 100%; min-height: 100%;">
    <div class="card-body">
        <h5 class="card-title">Historique de conversion</h5>
        <p class="card-text"><%= exchangehistory.base %> -> <%= exchangehistory.symbol %></p>
        <p class="card-text">Aujourd'hui : 1 <%= exchangehistory.base %> = <%= exchangehistory.today %> <%= exchangehistory.symbol %></p>
        <p class="card-text">- 1 semaine : 1 <%= exchangehistory.base %> = <%= exchangehistory.week %> <%= exchangehistory.symbol %></p>
        <p class="card-text">- 1 mois : 1 <%= exchangehistory.base %> = <%= exchangehistory.month %> <%= exchangehistory.symbol %></p>
    </div>
</div>
<form action="/home/exchange" method="POST">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <select class="form-control" id="selectExchangeBase" name="selectExchangeBase">
                    <% for (var i = 0; i < Object.keys(exchangeValue).length; i++) {%>
                        <option <% if (Object.keys(exchangeValue)[i] == exchangehistory.base) { %> selected <% } %> <% if (Object.keys(exchangeValue)[i] == exchangehistory.symbol) { %> disabled <% } %> ><%= Object.keys(exchangeValue)[i] %></option>
                    <% } %>
                </select>
            </div>
            <div class="col-sm-6">
                <select class="form-control" id="selectExchangeValue" name="selectExchangeValue">
                    <% for (var i = 0; i < Object.keys(exchangeValue).length; i++) {%>
                        <option <% if (Object.keys(exchangeValue)[i] == exchangehistory.symbol) { %> selected <% } %> <% if (Object.keys(exchangeValue)[i] == exchangehistory.base) { %> disabled <% } %> ><%= Object.keys(exchangeValue)[i] %></option>
                    <% } %>
                </select>
            </div>
        </div>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Changer de devises</button>
    </div>
</form>